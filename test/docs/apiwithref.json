{
  "asyncapi": "2.6.0",
  "info": {
    "title": "This is Async API with a schema reference",
    "version": "0.0.1"
  },
  "channels": {
    "VirtualTopic.crmservice": {
      "publish": {
        "message": {
          "oneOf": [
            {
              "$ref": "#/components/messages/crm:Customer.Created"
            },
            {
              "$ref": "#/components/messages/crm:Customer.Updated"
            },
            {
              "$ref": "#/components/messages/crm:Customer.Deleted"
            }
          ]
        }
      }
    }
  },
  "components": {
    "messages": {
      "crm:Customer.Created": {
        "summary": "A customer was created",
        "schemaFormat": "application/schema+json;version=draft-07",
        "payload": {
          "$ref": "https://schema.example.com/crm/shared.json"
        }
      },
      "crm:Customer.Updated": {
        "summary": "A customer was created",
        "schemaFormat": "application/schema+json;version=draft-07",
        "payload": {
          "$ref": "shared.json"
        }
      },
      "crm:Customer.Deleted": {
        "summary": "A customer was deleted",
        "schemaFormat": "application/schema+json;version=draft-07",
        "payload": {
          "$ref": "shared/shared_subfolder.json"
        }
      }
    }
  }
}
