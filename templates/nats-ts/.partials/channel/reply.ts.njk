
{% macro reply(channel, channelName, payload, encoding) %}
export function reply(onRequest: (err?: NatsError, msg?: {{channel.subscribe().message(0).name() | camelCase}}) => {{channel.publish().message(0).name() | camelCase}}, onReplyError: (err: NatsError) => void, nc?: Client): Promise<Subscription> {
  return new Promise(async (resolve, reject) => {
    if (nc) {
      try {

        let subscribeOptions: SubscriptionOptions = {};
        {%- if channel.subscribe().bindings().queue() | length %}
        //If queue
        subscribeOptions.queue = '{{channel.subscribe().bindings().queue().name()}}';
        {%- endif %}
        {%- if channel.subscribe().bindings().unsubAfter() | length %}
        //If unsubafter
        subscribeOptions.max = {{channel.subscribe().bindings().unsubAfter()}};
        {%- endif %}

        let subscription = nc.subscribe('{{channelName}}', (err, msg) => {
          if (err) {
            onRequest(err);
          } else {
            let processedData = utils.processRecievedData(msg.data, Payload.{{payload}}, '{{encoding}}');
            let requestData = new {{channel.subscribe().message(0).name() | camelCase}}();
            requestData.copyFrom(processedData);

            let responseObject = onRequest(undefined, requestData);
            if (msg.reply) {
              try {
                let requestData = utils.beforeResponse(responseObject, Payload.{{payload}}, '{{encoding}}');
                nc.publish(msg.reply, requestData);
              } catch (e) {
                if (onReplyError) {
                  onReplyError(e)
                } else {
                  console.error(e)
                }
              }
            } else {
              let error = new NatsError('Expected request to need a reply, did not..', '000');
              if (onReplyError) {
                onReplyError(error)
              } else {
                console.error(error)
              }
            }
          }
        }, subscribeOptions);
        resolve(subscription);
      } catch (e) {
        reject(e);
      }
    } else {
      reject(new Error("Nats client is not connected"));
    }
  })
}

{% endmacro %}
