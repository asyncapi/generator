{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "declaration": true,
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "src/transpiler/__tests__/testfiles"
  ],
  "include": [
    "src"
  ]
}
