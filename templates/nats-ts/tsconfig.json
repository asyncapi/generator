{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "dist/"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
