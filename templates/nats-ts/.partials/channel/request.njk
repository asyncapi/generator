
{% macro request(channel, channelName, server) %}
export function request(requestMessage: {{channel.publish().message(0).uid() | pascalCase}}Message, nc?: Client): Promise<{{channel.subscribe().message(0).uid() | pascalCase}}Message> {
  return new Promise<{{channel.subscribe().message(0).uid() | pascalCase}}Message>(async (resolve, reject) => {
    if (nc) {
      try {
        let inbox = nc.createInbox();
        await nc.subscribe(inbox, (err, msg) => {
          if (err) {
            reject(err);
          } else {
            let processedData = utils.processRecievedData(msg.data, Payload.{{server | tsPayload}}, '{{server | tsEncoding}}');
            resolve({{channel.subscribe().message(0).uid() | pascalCase}}Message.toMessage(processedData));
          }
        }, { max: 1 });
        let requestData = utils.beforeRequest(requestMessage, Payload.{{server | tsPayload}}, '{{server | tsEncoding}}');
        nc.publish('{{channelName}}', requestData, inbox);
      }catch(e){
        reject(e);
      }
    } else {
      reject(new Error("Nats client is not connected"));
    }
  })
}

{% endmacro %}
