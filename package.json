{
  "name": "generator",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo run test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generator:test": "turbo run test --filter=@asyncapi/generator",
    "generator:test:dev": "turbo run test:dev",
    "generator:test:unit": "turbo run test:unit  --filter=@asyncapi/generator",
    "generator:test:integration": "turbo run test:integration --filter=@asyncapi/generator",
    "generator:test:cli": "turbo run test:cli --filter=@asyncapi/generator",
    "generator:test:cleanup": "turbo run test:cleanup --filter=@asyncapi/generator",
    "generator:docs": "turbo run docs --filter=@asyncapi/generator",
    "generator:docker:build": "turbo run docker:build --filter=@asyncapi/generator",
    "generator:lint": "turbo run lint --filter=@asyncapi/generator",
    "generator-filters:test": "turbo run test --filter=@asyncapi/generator-filters",
    "generator-filters:docs": "turbo run docs --filter=@asyncapi/generator-filters",
    "generator-filters:release": "turbo run release --filter=@asyncapi/generator-filters",
    "generator-filters:generate:assets": "turbo run generate:assets --filter=@asyncapi/generator-filters",
    "generator-filters:lint:fix": "turbo run lint:fix --filter=@asyncapi/generator-filters",
    "generator-filters:bump:version": "turbo run bump:version --filter=@asyncapi/generator-filters"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
